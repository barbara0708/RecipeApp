<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    >
    <androidx.cardview.widget.CardView
        android:layout_margin="20dp"
        android:id="@+id/liked_list_container"
        app:cardCornerRadius="15dp"
        android:layout_width="match_parent"
        android:layout_height="248dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imgLikedDish"/>
        <TextView
            android:background="@color/white"
            android:textColor="@color/black"
            android:id="@+id/tvLikedDishName"
            android:layout_marginTop="130dp"
            android:marqueeRepeatLimit="marquee_forever"
            android:textStyle="bold"
            android:textSize="19dp"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Special Burger" />
        <TextView

            android:background="@color/white"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:id="@+id/tvLikedTimeCooking"
            android:layout_marginTop="159dp"
            android:layout_gravity="center_horizontal"
            android:text="20 minutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="185dp"
            android:layout_gravity="center_horizontal">

        <androidx.cardview.widget.CardView
            android:layout_marginRight="5dp"
            android:id="@+id/cvLikeLiked"
            app:cardCornerRadius="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp">
            <ImageView
                android:id="@+id/favorite"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/favorite"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:layout_marginLeft="5dp"
                android:id="@+id/cvLikedShare"
                app:cardCornerRadius="20dp"
                android:layout_width="40dp"
                android:layout_height="40dp"

                android:layout_gravity="center_horizontal">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_outward"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>